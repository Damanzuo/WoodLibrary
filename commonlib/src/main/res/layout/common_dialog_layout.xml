<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt30"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/pt10"
        android:paddingRight="@dimen/pt10"
        android:singleLine="true"
        android:textSize="@dimen/pt20"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/common_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_title"
        android:ellipsize="end"
        android:minHeight="@dimen/pt80"
        android:paddingLeft="@dimen/pt10"
        android:paddingRight="@dimen/pt10"
        android:textSize="@dimen/pt14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pt30"
        android:layout_below="@id/common_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/common_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_confirm"
            android:gravity="center"
            android:text="@string/common_confirm"
            android:textSize="@dimen/pt14" />

        <TextView
            android:id="@+id/common_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_cancel"
            android:gravity="center"
            android:text="@string/common_cancel"
            android:textSize="@dimen/pt14" />


    </LinearLayout>

</RelativeLayout>